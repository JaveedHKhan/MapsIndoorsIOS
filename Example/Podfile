source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '9.0'
use_frameworks!

def mapsindoors_pods
    pod "MapsIndoors", :path => "../"
    
    pod 'AFNetworking', '~> 2.6'
    pod 'MaterialControls', '~> 1.2'
    pod 'VCMaterialDesignIcons', '~> 2.1'
    pod 'GoogleFontsiOS/Roboto'
    pod 'HashBuilder', '~> 1.0'
    pod 'EasyTableView', '~> 2.1'
end

target 'MapsIndoors App' do
    mapsindoors_pods
end

target 'MapsIndoors UI Tests' do
    mapsindoors_pods
end

target 'MapsIndoors Unit Tests' do
    mapsindoors_pods
end

post_install do |installer|
    installer.pods_project.targets.each do |target|
        target.build_configurations.each do |config|
            config.build_settings['SWIFT_VERSION'] = '3.0'
        end
    end
end
